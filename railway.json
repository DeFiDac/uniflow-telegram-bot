{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "builder": "RAILPACK",
    "buildCommand": "pnpm install --frozen-lockfile && pnpm run build"
  },
  "deploy": {
    "startCommand": "node dist/bot.js",
    "restartPolicyType": "ALWAYS",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 10
  }
}
